data "aws_iam_policy_document" "cloudwatch_logs" {
  statement {
    effect = "Allow"
    actions = ["firehose:*"]
    resources = ["arn:aws:firehose:ap-northeast-1:*:*"]
  }

  statement {
    effect = "Allow"
    actions = ["iam:PassRole"]
    resources = ["arn:aws:iam:*:role/cloudwatch-logs"]
  }
}
